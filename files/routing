# Cleaning iptables
iptables -F
iptables -t nat -F
iptables -t mangle -F
iptables -X
iptables -t nat -X
iptables -t mangle -X

# Dropping null packets (basic recon)
iptables -A INPUT -p tcp --tcp-flags ALL NONE -j DROP

# Syn flood protection
iptables -A INPUT -p tcp ! --syn -m state --state NEW -j DROP

# Xmas packet
iptables -A INPUT -p tcp --tcp-flags ALL ALL -j DROP


# Cutting roles
iptables -N ACCEPT_TCP_UDP
iptables -A ACCEPT_TCP_UDP -p tcp -j ACCEPT
iptables -A ACCEPT_TCP_UDP -p udp -j ACCEPT

# Allow ssh from wlan0
iptables -A INPUT -i wlan0 -p tcp --dport 22 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o wlan0 -p tcp --sport 22 -m state --state NEW,ESTABLISHED -j ACCEPT

iptables -A INPUT -i wlan1 -p tcp --dport 22 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o wlan1 -p tcp --sport 22 -m state --state NEW,ESTABLISHED -j ACCEPT

# wlan0 http/s
iptables -A INPUT -i wlan0 -p tcp --sport 80 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o wlan0 -p tcp --dport 80 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A INPUT -i wlan0 -p tcp --sport 443 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o wlan0 -p tcp --dport 443 -m state --state NEW,ESTABLISHED -j ACCEPT

# Git
iptables -A INPUT -i wlan0 -p tcp --sport 9418 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o wlan0 -p tcp --dport 9418 -m state --state NEW,ESTABLISHED -j ACCEPT

# ntp
iptables -A OUTPUT -o wlan0 -p udp -m udp --sport 123 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A INPUT -i wlan0 -p udp -m udp --dport 123 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o lo -p udp -m udp --dport 123 -m state --state NEW,ESTABLISHED -j ACCEPT

iptables -A INPUT -i lo -p udp -m udp --sport 123 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A INPUT -i lo -p udp -m udp --dport 123 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o lo -p udp -m udp --sport 123 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o lo -p udp -m udp --dport 123 -m state --state NEW,ESTABLISHED -j ACCEPT

# DHCP on lo
iptables -A INPUT -i lo -p udp -m udp --sport 53 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A INPUT -i lo -p udp -m udp --dport 53 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o lo -p udp -m udp --sport 53 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o lo -p udp -m udp --dport 53 -m state --state NEW,ESTABLISHED -j ACCEPT

# DHCP on wlan0/1

iptables -A INPUT -i wlan0 -p udp -m udp --sport 53 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o wlan0 -p udp -m udp --dport 53 -m state --state NEW,ESTABLISHED -j ACCEPT

iptables -A INPUT -i wlan1 -p udp -m udp --dport 53 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o wlan1 -p udp -m udp --sport 53 -m state --state NEW,ESTABLISHED -j ACCEPT

iptables -A INPUT -i wlan1 -p udp -m udp --sport 68 --dport 67 -m state --state NEW,ESTABLISHED -j ACCEPT
iptables -A OUTPUT -o wlan1 -p udp -m udp --sport 67 --dport 68 -m state --state NEW,ESTABLISHED -j ACCEPT

# Nat setup
iptables -t nat -A POSTROUTING -o wlan0 -j MASQUERADE
iptables -A FORWARD -i wlan0 -o wlan1 -m state --state RELATED,ESTABLISHED -j ACCEPT

iptables -A FORWARD -i wlan1 -o wlan0 -p udp --dport 53 -j ACCEPT
iptables -A FORWARD -i wlan1 -o wlan0 -p tcp --dport 53 -j ACCEPT


# Allow only http access to from wlan1 to wlan0
iptables -A FORWARD -i wlan1 -o wlan0 -p tcp --dport 80 -j ACCEPT
iptables -A FORWARD -i wlan1 -o wlan0 -p tcp --dport 443 -j ACCEPT

# Log before dropping
iptables -A INPUT  -j LOG  -m limit --limit 12/min --log-level 4 --log-prefix 'IP INPUT drop: '
iptables -A INPUT  -j DROP

iptables -A OUTPUT -j LOG  -m limit --limit 12/min --log-level 4 --log-prefix 'IP OUTPUT drop: '
iptables -A OUTPUT -j DROP

echo "save rules by running: sudo sh -c 'iptables-save > /etc/iptables.ipv4.nat'"
