# The loopback network interface
auto lo
iface lo inet loopback


<% if @wireless==false %>
# the internal (wired) network interface
auto  <%= @interface %>
 iface <%= @interface %> inet static
 address <%=@address%>
 netmask 255.255.255.0
 broadcast <%=@broadcast%>
<% end %>

<% if @wireless==true %>
auto eth0
iface eth0 inet dhcp

# wireless AP
allow-hotplug <%= @interface %>
iface <%= @interface %> inet static
    address <%=@address%>
    netmask 255.255.255.0
    network <%=@network%>
    broadcast <%=@broadcast%>
<% end %>

